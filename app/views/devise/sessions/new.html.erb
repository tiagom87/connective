

<!-- body-content -->
      <div class="body-content clearfix" >

        <div class="block-section bg-color4">
            <div class="text-center logo"> <a href="index.html"><%= image_tag "logo.png" %></a></div>
  <br>
          <div class="container">
            <div class="panel panel-md">
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-12">
             
                    <!-- form login -->
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                   
                      <div class="form-group">
                      <%= f.input :email, required: true, input_html: {class: "form-control"}, placeholder: "Your Email" %>
                      </div>
                      <div class="form-group">
                       <%= f.input :password, required: true, input_html: {class: "form-control"}, placeholder: "Your Password" %>
                      </div>
                      <div class="white-space-10"></div>
                      <div class="form-group no-margin">
                      <%= f.submit "Log in", class: "btn btn-theme btn-lg btn-t-primary btn-block" %>
                      </div>
                    <% end %>
                    <br>
                    <div class="text-center">
                      <%= render "devise/shared/links" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>

     

      </div><!--end body-content -->